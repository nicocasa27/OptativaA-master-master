        totalCuenta = entrada.nextFloat();
        System.out.println("Ingresa el Porcentaje de la propina que quieres dejar");
        propinaPorcentaje = entrada.nextFloat();

        //Operaciones

        totalPropina = totalCuenta * (porcentajePropina / 100);
        total_a_Pagar = totalCuenta + totalPropina;
        System.out.println("El total a pagar es de $" + Math.round(total_a_Pagar * 100) / 100.0);

        //Pedir el total y calcular el cambio
        System.out.println("Ingresa el total pagado");
        totalPagado = entrada.nextFloat();
